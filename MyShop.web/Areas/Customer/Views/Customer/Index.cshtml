@model IEnumerable<Product>
    @{
    ViewBag.title = "Home Page";
    Layout = "_Customer";
}


<div class="container ">
    <h2>All Products Added</h2>

    <div class="card-columns">
        @foreach (var item in Model)
        {
            <div class="card row">
                <img class="card-img-top" src="~/@item.img" alt="Card image cap" width="300" height="300">
                <div class="card-body">
                    <h5 class="card-title"><strong>@item.name</strong></h5>
                    <p class="card-text">Description :  @item.description</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Price : @item.price</li>
                        <li class="list-group-item">Added At : @item.CreatedAdd</li>
                    </ul>
                    <div class="card-body">
                        <a class="btn btn-outline-primary" href="#" class="card-link">Add To Card</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-controller="Customer" asp-route-id="@item?.id" class="card-link">View</a>
                    </div>
                </div>

              
            </div>

        }
         
       
    </div>
</div>



