@model ProductVM
@{
    ViewBag.cardtitle = "Edit Product";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-4 m-md-3">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product.id" />
            <input type="hidden" asp-for="product.img" />
            <div class="form-group">
                <label asp-for="product.name" class="control-label"></label>
                <input asp-for="product.name" class="form-control" />
                <span asp-validation-for="product.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.description" class="control-label"></label>
                <input asp-for="product.description" class="form-control" />
                <span asp-validation-for="product.description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.price" class="control-label"></label>
                <input asp-for="product.price" class="form-control" type="number" />
                <span asp-validation-for="product.price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.img" class="control-label"></label>
                <input name="file" id="uploaded_image" class="form-control" type="file" />

            </div>

            <div class="form-group">
                <label asp-for="product.categoryId" class="control-label"></label>
                <select asp-for="product.categoryId" asp-items="Model.CategoryList" class="form-control">
                    <option class="form-control" disabled selected>----------Select Category-------</option>
                </select>

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div>
            <img src=~/@Model.product.img width="600" height="400"/>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
