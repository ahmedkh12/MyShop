@model ProductVM

@{

    Layout = "_Layout";
}

<div class="row">

    <div class="col-md-7">
        <input type="hidden" asp-for="product.id" />
        <input type="hidden" asp-for="product.img" />
        
        <dl class="row">
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.name)
            </dt>
            <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.name)
            </dd>
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.description)
            </dt>
            <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.description)
            </dd>

            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.price)
            </dt>
            <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.price)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.product.CreatedAdd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.product.CreatedAdd)
            </dd>

            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.category)
            </dt>
            <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.category)
            </dd>

        </dl>
    </div>



    <div class="col-md-5">
        <div>
            <img src=~/@Model.product.img width="400" height="300" />
        </div>
    </div>



</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.product.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
